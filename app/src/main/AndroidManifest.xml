<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="nl.squirrel.lms">
   <uses-permission android:name="android.permission.INTERNET" />
   <application
      android:allowBackup="false"
      android:usesCleartextTraffic="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:theme="@style/AppTheme"
       >

      <activity
         android:name="nl.squirrel.lms.MainActivity"
         android:label="@string/app_name"
         android:clearTaskOnLaunch="@string/clear_task_on_launch"
         android:finishOnTaskLaunch="@string/clear_task_on_launch"
         android:noHistory="@string/clear_task_on_launch"
         android:theme="@style/AppTheme" >

         <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
         </intent-filter>

      </activity>

      <activity android:name=".SettingsActivity"/>

    </application>
</manifest>
